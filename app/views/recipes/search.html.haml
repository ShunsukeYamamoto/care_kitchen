= render "shared/header"
.main
  .search-board
    .search-text
      = @keyword
      %p のレシピ検索結果
    - @recipes.each do |recipe|
      .recipe-container
        =link_to "#{recipe_path(recipe.id)}" do
          .image-box
            =image_tag "#{recipe.image}", class: 'image-box__inside'
          .text-box
            =recipe.title
            %p.text-box__text
              =recipe.text
= render "shared/footer"