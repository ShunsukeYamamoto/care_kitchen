.form_header
  .form_header--title
    =link_to "CARE KITCHEN",root_path
  .form_header--icon
    =link_to new_user_session_path do
      %i.fas.fa-door-open
      %p ログイン


.form
  %h1.form__title 一人目のユーザー登録
  = form_for(@person, url: create_first_person_path) do |f|
    -# = render "devise/shared/error_messages", resource: resource
    = flash[:alert]
    .field
      = f.text_field :name,placeholder: "ユーザー名", autofocus: true,class:"field--form"

    .field.birthday
      = f.date_field :birthday,placeholder: "生年月日", autofocus: true,class:"birthday__form"
      %p.birthday__title 生年月日

    .field
      = f.select :gender,[["性別を選択してください",""],["男性","0"],["女性","1"]],class: "select_gender"

    = f.fields_for :personal_informations,@person.personal_informations.build do |i|
      .field
        = i.number_field :height,placeholder: "身長(m)　例:1.65m",class:"field--form",step: "0.01"
      .field
        = i.number_field :weight,placeholder: "体重(kg)　例:55.5kg",class:"field--form",step: "0.1"
        
    .actions
      = f.submit "入力完了",class: "form--submit"
  -# = render "users/shared/links"